<nav id="jobOfferNav" class="nav-bar--sf1 mar--sm--bn">
    <button {{bind-attr class=":float--right :button :button--primary :mar--sm--only--rs isLoading:load-this"}} {{action "clickSave"}}>Save</button>
    <h1 class="nav-bar--sf1__title has-subtitle page__heading has-subheading">Job Specific Questions</h1>
    <h2 class="nav-bar--sf1__subtitle page__subheading">Front End Developer</h2>
</nav>
<hr class="show-brkpoint--md">
{{#if selectedQuestions}}
    <ul class="list-group list-group--bordered" id="selectedQs">
        <div class="list-heading">
            <h4 class="list-heading__title has-radius-top">
                Selected Questions
            </h4>
        </div>
        {{#each question in selectedQuestions itemController="question"}}
            {{view "question"}}
        {{/each}}
    </ul>
{{/if}}

<ul class="list-group list-group--bordered" id="selectedQs">
    <div class="list-heading">
        <h4 class="list-heading__title has-radius-top">
            Options
        </h4>
    </div>
    <li id="ember329" class="ember-view list-group__item has-icon--right block">
        <div class="input-size pad--sm--m dots">
            <input type="checkbox"/><label> Allow candidates to assert skills</label>
        </div>
    </li>
</ul>

{{#if positions}}
    {{#if hasQuestions}}
        <ul class="list-group list-group--bordered">
            {{#each position in positions itemController="position"}}
                {{#if position.questions}}
                    <div class="list-heading">
                        <h4 class="list-heading__title">
                            Questions for a {{position.Name}}
                        </h4>
                    </div>
                    <div>
                        {{#each question in position.questions itemController="question"}}
                            {{view "question"}}
                        {{/each}}
                    </div>
                {{/if}}
            {{/each}}
        </ul> 
    {{/if}}
{{/if}}